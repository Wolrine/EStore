<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStoreWinApp</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyStoreWinApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper">
        <!-- Navbar -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">eStore</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- End Navbar -->
        <div class="container row">
            <!-- Sidebar -->
            <div class="list-group col-lg-2">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    Shopping
                </a>
                <a asp-controller="Product" class="list-group-item list-group-item-action">Products</a>
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    Administration
                </a>
                <a asp-controller="Member" class="list-group-item list-group-item-action">Members</a>
                <a asp-controller="Order" class="list-group-item list-group-item-action">Orders</a>
                <a asp-controller="Home" asp-action="LogOut" class="list-group-item list-group-item-action" aria-current="true">
                    Logout
                </a>
                @*<a href="#" class="list-group-item list-group-item-action disabled" tabindex="-1" aria-disabled="true">A disabled link item</a>*@
            </div>
            <!-- End Sidebar -->
            <!-- Content -->
            <main role="main" class="pb-3 col-lg-10 align-items-center">
                @RenderBody()
            </main>
            <!-- End Content -->
        </div>
        

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - eStore
                - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
